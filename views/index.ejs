<!DOCTYPE html>
<html>
<%- include("./partials/head") %>
<%- include("./partials/header") %>

<body>
  <div class="carrousel">
  <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="false">
    <div class="carousel-indicators">
      <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
      <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
      <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
      <div class="carousel-item active">
       <a href="/products/detail/1"><img src="/images/Image-jordan.jpg" class="d-block w-100" alt="..."></a>
        <div style="
        background-color: #f5f5dcc2;
        border-radius: 5px;" class="carousel-caption d-none d-md-block">
          <h5 class="carousel-name"><%=products[0].name%></h5>
          <p style="margin: 0px;" class="carousel-description"><%=products[0].description%></p>
        </div>
      </div>
      <div class="carousel-item">
       <a href="/products/detail/3"><img src="/images/Image-jordan2.jpg" class="d-block w-100" alt="..."></a>
        <div style="
        background-color: #f5f5dcc2;
        border-radius: 5px;" class="carousel-caption d-none d-md-block">
          <h5 class="carousel-name"><%=products[2].name%></h5>
          <p style="margin: 0px;" class="carousel-description"><%=products[2].description%></p>
        </div>
      </div>
    </div>
      <div class="carousel-item">
        <a href="products/2"><img src="/images/Image-jordan3.webp" class="d-block w-100" alt="..."></a>
        <div  class="carousel-caption d-none d-md-block">
          <h5 class="carousel-name"><%=products[1].name%></h5>
          <p class="carousel-description"><%=products[1].description%></p>
        </div>
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
  
     
   
    <div class="album bg-light"> 
      <div class=" container">
        <h1 class="title">Algunos de los productos</h1> 
            <div style="width: 100%; display: flex; flex-wrap: wrap" class="products-index">
                <% products.forEach(product => {%>
                  <a class="link" href="/products/detail/<%=product.id%>">
                  <div class="box" style="width: 25rem; margin: 1rem; background: rgb(72, 88, 100); border-radius: 0.4rem; padding: 0.6rem">              
                    <img src="<%= product && product.images && product.images.url %>" class="card-img-top"  alt="Product Image">
                    <div class="card-body">
                      <h5 class="card-title"><%=product.name%></h5>
                      <h class="card-brand"><%=product.brands.name%></h>
                      <h3><%=product.price%> USD</h3>              
                    </div>    
                  </a>
                  <div class="buy"> 
                    <% if (locals.isLogged){ %>
                  <form action="/edit/<%=product.id%>" method="GET">
                  <button class="btn btn-primary">Editar</button>
                  </form>
                  <% } else {} %>
                  </div>           
                  </div>   
                <% }) %> 
                 
              </div>
        </div>  
      </div>


  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.2/dist/umd/popper.min.js" integrity="sha384-q9CRHqZndzlxGLOj+xrdLDJa9ittGte1NksRmgJKeCV9DrM7Kz868XYqsKWPpAmn" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>    
    <%- include("./partials/footer") %>
</body>
 
</html>